FROM ros:humble

SHELL ["/bin/bash", "-c"]

# Update to latest version
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ="Europe/London"
RUN apt-get update

# install ros package
RUN apt-get update && apt-get install -y \
      ros-${ROS_DISTRO}-desktop \
      ros-${ROS_DISTRO}-demo-nodes-cpp \
      ros-${ROS_DISTRO}-demo-nodes-py

WORKDIR /root

RUN mkdir -p ~/plansys2_p05/src && \
    cd ~/plansys2_p05/src && \
    git clone https://github.com/IntelligentRoboticsLabs/ros2_planning_system.git

RUN cd ~/plansys2_p05 && rosdep install -y -r -q --from-paths src --ignore-src --rosdistro ${ROS_DISTRO}

RUN cd ~/plansys2_p05/src && \
    cp -r ~/plansys2_p05/src/ros2_planning_system/plansys2 ~/plansys2_p05/src/

RUN cd ~/plansys2_p05 && rosdep install -y -r -q --from-paths src --ignore-src --rosdistro ${ROS_DISTRO}

RUN apt-get install -y vim gdb terminator

RUN cd ~/plansys2_p05 && source /opt/ros/${ROS_DISTRO}/setup.bash && colcon build --symlink-install

CMD /bin/bash

# to build
# sudo docker build --rm  --tag ros-humble . --file Dokerfile-humble

# to run
# sudo docker run -v /tmp/.X11-unix/:/tmp/.X11-unix/ --volume="$HOME/.Xauthority:/root/.Xauthority:rw" --network=host --name ubuntu_bash --env="DISPLAY" --rm -i -t ros-humble bash